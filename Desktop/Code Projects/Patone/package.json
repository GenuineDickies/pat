{
  "name": "patone-roadside-assistance",
  "version": "1.0.0",
  "description": "Roadside Assistance Admin Platform - JavaScript Testing",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/JavaScript/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "frontend/js/**/*.js",
      "assets/js/**/*.js"
    ]
  }
}
